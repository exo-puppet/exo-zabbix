Cmnd_Alias      MEGARAID_PDLIST_CMDS = /sbin/MegaCli -PDList *
Cmnd_Alias      MEGARAID_LDINFO_CMDS = /sbin/MegaCli -LDInfo *
Cmnd_Alias      MEGARAID_SMARTCTL_CMDS = /usr/sbin/smartctl -d megaraid*
Cmnd_Alias      SFDISK_CMDS = /sbin/sfdisk -V *
Cmnd_Alias      SEND_POSTFIX_CMDS = <%= scope.lookupvar('zabbix::params::config_other_scripts_dir') %>/send_postfix.sh *
Cmnd_Alias      SMARTCTL_ATTRIBUTS_CMDS = /usr/sbin/smartctl -A /dev/*
Cmnd_Alias      SMARTCTL_XERROR_CMDS = /usr/sbin/smartctl --log=xerror /dev/*
Cmnd_Alias      DU_CMDS = /usr/bin/du
Cmnd_Alias      MYSQL_SCHEMAS_SIZES_CMDS = /etc/zabbix/other-scripts/_getmysqlschemassizes.sh

User_Alias 		ZABBIX = <%= scope.lookupvar('zabbix::params::zabbix_user') %>

ZABBIX 			ALL = (root) NOPASSWD: MEGARAID_PDLIST_CMDS, MEGARAID_LDINFO_CMDS, MEGARAID_SMARTCTL_CMDS, SFDISK_CMDS, SEND_POSTFIX_CMDS, SMARTCTL_ATTRIBUTS_CMDS, SMARTCTL_XERROR_CMDS, DU_CMDS, MYSQL_SCHEMAS_SIZES_CMDS
