# Database type to be used by zabbix-server-mysql:
zabbix-server-mysql zabbix-server-mysql/database-type select  mysql
zabbix-server-mysql zabbix-server-mysql/internal/skip-preseed boolean false

# Connection method for MySQL database of zabbix-server-mysql:
zabbix-server-mysql zabbix-server-mysql/mysql/method  select  unix socket

# MySQL database name for zabbix-server-mysql:
zabbix-server-mysql zabbix-server-mysql/db/dbname string  <%= scope.lookupvar('zabbix::db_name') %>

# MySQL application password for zabbix-server-mysql:
zabbix-server-mysql zabbix-server-mysql/db/app-user string  <%= scope.lookupvar('zabbix::db_user') %>
zabbix-server-mysql zabbix-server-mysql/mysql/app-pass  password  <%= scope.lookupvar('zabbix::db_password') %>
zabbix-server-mysql zabbix-server-mysql/app-password-confirm  password  <%= scope.lookupvar('zabbix::db_password') %>

zabbix-server-mysql zabbix-server-mysql/mysql/admin-user  string  root
zabbix-server-mysql zabbix-server-mysql/mysql/admin-pass  password  <%= scope.lookupvar('mysql::params::mysql_root_password') %>
zabbix-server-mysql zabbix-server-mysql/password-confirm  password  <%= scope.lookupvar('mysql::params::mysql_root_password') %>

# Do you want to back up the database for zabbix-server-mysql before upgrading?
zabbix-server-mysql zabbix-server-mysql/upgrade-backup  boolean true

# Do you want to purge the database for zabbix-server-mysql?
zabbix-server-mysql zabbix-server-mysql/purge boolean false
zabbix-server-mysql zabbix-server-mysql/internal/reconfiguring  boolean false
zabbix-server-mysql zabbix-server-mysql/passwords-do-not-match  error 

# Configure database for zabbix-server-mysql with dbconfig-common?
zabbix-server-mysql zabbix-server-mysql/dbconfig-install  boolean true
zabbix-server-mysql zabbix-server-mysql/dbconfig-reinstall  boolean false
zabbix-server-mysql zabbix-server-mysql/dbconfig-upgrade  boolean true

